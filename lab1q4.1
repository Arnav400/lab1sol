#include<iostream>
using namespace std;

void reverse_array(int arr[], int size )
{
	int start = 0  ;
	int end = size -1 ;
	
	while( start < end )
	{  //swap
	   int temp = arr[start];
	   arr[start]= arr[end];
	   arr[end] = temp ;
	   	start++;
	   	end-- ;
	}
}
int main()
{
	int arr[5] = {1,2,3,4,5};
	int size = sizeof(arr)/sizeof(arr[0]) ;
	cout<<"Original Array "<<endl;
	 for(int i = 0 ; i< size ; i++)
	 {
	 	cout<<arr[i]<<endl;
	 }
	
	cout<<"Reversed Array"<<endl;
	
	reverse_array(arr, size);
	for(int i = 0 ; i< size ; i++)
	 {
	 	cout<<arr[i]<<endl;
	 }
	 
	 return 0 ; 	
}
